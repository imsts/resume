<div class="row">
   <div class="col-12">
      <div class="card text-bg-dark">
         <div class="card-body">
            <h2 class="card-title mb-3">{{header}}</h2>
            <div class="mb-4">
               <p>{{description}}</p>
            </div>
            {{#each buttons}}
            <div class="col-3 mt-3">
               <a class="btn btn-primary" href="{{link}}">{{text}}</a>
            </div>
            {{/each}}
         </div>
      </div>
   </div>
</div>