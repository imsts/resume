<div class="row g-0">
   <div class="col-3">
      <p class="card-title mb-2">{{number}}</p>
      <span class="card-text fw-medium">{{status}}</span>
   </div>

   <div class="col-2 text-center">
      <div class="card-text">
         <small class="text-body-secondary">{{amount.title}}:</small>
         <span class="fw-medium">{{amount.value}}</span>
      </div>
   </div>

   <div class="col-5">
      {{#each images}}
      <img src="{{this}}" class="img-fluid rounded"
         alt="photo">
      {{/each}}
   </div>

   <div class="col-2 text-end mt-4">
      {{#with button}}
      <button class="btn {{#if isPrimary}} btn-primary
         {{/if}}"
         href="{{link}}" type="button">{{text}}</button>
      {{/with}}
   </div>
</div>