<div class="card mb-3">
   <div class="row g-0">

      <div class="col-2 p-2">
         <img src="{{image}}" class="img-fluid rounded">
      </div>

      <div class="col-10">
         <div class="card-body p-2">
            <div class="row">
               <div class="col-5 p-2">
                  <h5 class="card-title">{{name}}</h5>
                  <p class="card-text">{{description}}</p>
               </div>
               <div class="col-2 p-2 ms-3">
                  <p class="card-text mt-4">
                     <small class="text-body-secondary">{{price.title}}:</small>
                     <br>
                     <span><b>{{price.value}}</b></span>
                  </p>
               </div>
               <div class="col-2 text-center p-2 mt-5">
                  <small class="text-body-secondary">{{amount}}</small>
               </div>
               <div class="col-2 p-2 ms-5">
                  {{#each buttons}}
                  <div class="">
                     <button class="btn {{#if isPrimary}} btn-primary {{/if}}
                        {{#if isDanger}} btn-outline-danger {{/if}} mb-3"
                        type="button">{{text}}</button>
                  </div>
                  {{/each}}
               </div>
            </div>
         </div>
      </div>
   </div>
</div>