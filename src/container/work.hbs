{{#with main}}
<main>
  <section class="row">
    <div class="card border-2">
      <div class="mb-3 p-2 mt-3">
        {{>title data="Work history" big=true}}
      </div>
      <div class="card p-2 col-5 border-4 border-danger">
        <ul>
          {{#each works}}
          <div>{{position}}</div>
          <br>
          <div>
            {{duration.from}} -
            {{#if duration.to}}
            {{duration.to}}
            {{else}} (досі тут працюємо)
            {{/if}}
          </div>
      </div>
      <br>
      <div class="display-6">
        {{#if company.url}}
        {{> link text=company.name href=company.url blank=true noLine=true }}
        {{else}}
        <b><i class="bi bi-apple" style="color: green;"></i> {{company.name}}</b>
        {{/if}}
      </div>
      <br>
      <div class="card col-5">
        <div class="m-3">
          <strong>Projects ({{projectAmount}})</strong>
        </div>
        <ul>
          {{#each projects}}
          <li>
            <div>{{> link text=name href=url blank=true noLine=true}}</div>
            <br>
            <div>
              <p>{{about}}</p>
            </div>

            <div>
              <em>Project stacks ({{stackAmount}})</em>
            </div>

            <div>
              <ul>
                {{#each stacks}}
                {{/each}}
              </ul>
            </div>

            <div>
              <em>Project awards ({{awardAmount}})</em>
            </div>

            <div>
              <ul>
                {{#each awards}}
                <li>{{name}}</li>
                {{/each}}
              </ul>
            </div>
          </li>
          {{/each}}
        </ul>
      </div>
      <br>
      {{/each}}
      </ul>
    </div>
  </section>
</main>
{{/with}}


