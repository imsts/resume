{{#with main}}
<main class="row">

  <section class="col">

    <div class="card">
      <div class="card-title text-center m-2">
        {{>title data='All Skills' big=true}}
      </div>
      <div class="card-body">
        <ul>
          {{#each skills}}
          <li><i class="bi bi-code-square"></i>
            {{name}}
            {{#if point includeZero=true}}
            ({{point}}) {{/if}}
            {{#if isTop}} (top!) {{/if}}

            {{#unless point includeZero=true}}
            (не вивчаємо) {{/unless}}
            {{#unless point}}
            {{#if point includeZero=true}}
            (зараз вивчаємо)
            {{/if}}
            {{/unless}}
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </section>

  <section class="col">
    {{>title data='My hobbies'}}
    <div class="card p-2">
      <ol>
        {{#each hobbies}}
        <li><i class="bi bi-brush"></i> {{name}} {{#if isMain}}
          (favourite) {{/if}}</li>
        {{/each}}
      </ol>
    </div>
  </section>
</main>
{{/with}}

