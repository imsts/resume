<div class="">

   <div class="mb-5">
      {{> nav-shop }}
   </div>

   <main class="main">
      <div class="row">
         <div>
            <h1 class="mb-5 ms-3">{{header}}</h1>
         </div>

         {{!-- Виведення даних зліва --}}
         <div class="col-8">

            {{!-- Виведення даних з об'єкта 'contacts_data' --}}
            <section>
               <div class="row">
                  {{#with contacts_data}}
                  <div>
                     <h3 class="mb-3">{{title}}</h3>
                     <div class="row">
                        <div class="col mb-3 mt-3">
                           {{#each buttons}}
                           <button type="button" class="btn {{#if isPrimary}}
                                 btn-warning {{/if}}
                                 {{#if isOutline}} btn-outline-warning {{/if}}
                                 me-3">{{this.text}}</button>
                           {{/each}}
                        </div>
                     </div>

                     {{!-- Виведення даних з об'єкта 'form' --}}
                     <div class="row">
                        <div class="col-6">
                           {{#with form.input}}
                           {{> contact-form data=surname}}
                           {{/with}}
                        </div>
                        <div class="col-6">
                           {{#with form.input}}
                           {{> contact-form data=name}}
                           {{/with}}
                        </div>
                        <div class="col-6">
                           {{#with form.input}}
                           {{> contact-form data=phone}}
                           {{/with}}
                        </div>
                        <div class="col-6">
                           {{#with form.input}}
                           {{> contact-form data=email}}
                           {{/with}}
                        </div>
                     </div>

                     <div>
                        <hr>
                     </div>

                     {{!-- Виведення даних з об'єкта 'switch' --}}
                     <div class="row">
                        {{#with form}}
                        {{#each switch}}
                        <div class="col-12 p-2">
                           <div class="form-check form-switch">
                              <label class="form-check-label" for="mySwitch">{{text}}</label>
                              <input class="form-check-input" type="checkbox" id="mySwitch" name="info" value="yes"
                                 {{#if isActive}} checked {{/if}}>
                           </div>
                        </div>
                        {{/each}}
                        {{/with}}
                     </div>

                     <div>
                        <hr>
                     </div>

                  </div>
                  {{/with}}
               </div>
            </section>

            {{!-- Виведення даних з об'єкта 'delivery' --}}
            <section class="mb-4">
               {{#with delivery}}
               <h3 class="mb-4">{{title}}</h3>
               <div class="card mb-3">
                  <div class="row p-3">
                     <div class="col-6">
                        {{> select-form data=select.[0]}}
                     </div>
                     <div class="col-6">
                        {{> select-form data=select.[1]}}
                     </div>
                  </div>
               </div>

               {{!-- Виведення даних з об'єкта 'delivery_type' --}}
               {{#each delivery_type}}
               <div class="form-check mb-2">
                  <label for="" class="form-check-label">{{type}}</label>
                  <input name="delivery" type="radio" class="form-check-input" {{#if @first}}checked{{/if}}>
               </div>
               {{/each}}
               {{/with}}
            </section>
            <hr>

            {{!-- Виведення даних з об'єкта 'payment' --}}
            <section class="payment mb-4">
               {{#with delivery.payment}}
               <h3 class="mb-4">{{title}}</h3>
               {{#each list}}
               <div class="form-check m-2 ms-0">
                  <label for="" class="form-check-label">{{type}}</label>
                  <input name="payment" type="radio" class="form-check-input" {{#if @first}}checked{{/if}}>
               </div>
               <span>{{description}}</span>
               {{/each}}
               {{/with}}
            </section>
            <hr>

            {{!-- Виведення даних з об'єкта 'contact' --}}
            <section class="">
               {{#with delivery}}
               <h3 class="mb-4">{{contact.title}}</h3>
               <div class="row">
                  <div class="col-6">
                     {{#with contact}}
                     {{> contact-form data=surname}}
                     {{/with}}
                  </div>
                  <div class="col-6">
                     {{#with contact}}
                     {{> contact-form data=name}}
                     {{/with}}
                  </div>
                  <div class="col-6">
                     {{#with contact}}
                     {{> contact-form data=phone}}
                     {{/with}}
                  </div>
                  <div class="col-6">
                     {{#with contact}}
                     {{> contact-form data=email}}
                     {{/with}}
                  </div>
               </div>
               <hr>

               {{!-- Виведення даних з об'єкта 'coment' --}}
               {{#with coment}}
               <form>
                  <label for="comment">{{label}}</label>
                  <input type="text" class="form-control mt-3" placeholder="{{placeholder}}">
               </form>
               {{/with}}
               {{/with}}
            </section>
            <hr>

            {{!-- Виведення даних з об'єкта 'coupon' --}}
            <section class="mb-4">
               {{#with coupon}}
               <h3 class="mb-4">{{title}}</h3>

               {{#with select}}
               <div class="mb-3">
                  {{> form-select-lg data=availabel_coupon}}
               </div>

               <div class="mb-3">
                  {{> form-select-sm data=friend_coupon}}
                  <div class="form-text">Caption text, description, error
                     notification</div>
               </div>
               {{/with}}

               {{#with add}}
               <div class="mb-3">
                  <form>
                  <label class="form-label">{{friend.label}}</label>
                  <input type="text" class="form-control form-control-lg p-3" placeholder="{{friend.placeholder}}">
                  <div class="form-text">{{friend.caption}}</div>
                  </form>
               </div>
               
               <div class="mb-3">
                  <form>
                  <label class="form-label">{{colleague.label}}</label>
                  <input type="text" class="form-control form-control-sm" placeholder="{{colleague.placeholder}}">
                  <div class="form-text">{{colleague.caption}}</div>
                  </form>
               </div>
               {{/with}}
               {{/with}}
            </section>
            <hr>

            {{!-- Виведення даних з об'єкта 'quiz' --}}
            <section class="mb-4">
               {{#with quiz}}
               <h3 class="mb-4 pt-1">{{title}}</h3>
               {{#with preference}}
               <p>{{title}}</p>
               <div class="form-check mb-3">
                  {{#each options}}
                  <div class="mb-2">
                     <label for="" class="form-check-label">{{this}}</label>
                     <input name="quiz" type="radio" class="form-check-input" {{#if @first}}checked{{/if}}>
                  </div>
                  {{/each}}
               </div>
               {{/with}}

               {{#with your_expirience}}
               <div class="mb-3">
                  <form>
                     <label for="comment">{{label}}</label>
                     <input type="text" class="form-control mt-3">
                  </form>
               </div>
               {{/with}}

               <div class="mb-3">
                  {{> select-form data=purchase_frequency}}
               </div>

               <div>
                  {{#with factors}}
                  <p>{{title}}</p>
                  <div class="form-check">
                     {{#each options}}
                     <div class="mb-2">
                        <label for="" class="form-check-label">{{this}}</label>
                        <input name="quiz" type="checkbox" class="form-check-input" {{#if @first}}checked{{/if}}>
                     </div>
                     {{/each}}
                  </div>
                  {{/with}}
               </div>
               {{/with}}
            </section>
         </div>

         {{!-- Виведення даних справа --}}
         <div class="col-4">
            <section class="sidebar">

               {{!-- Виведення даних з об'єкта 'action_block' --}}
               <div class="card mb-3">
                  <div class="card-body">
                     {{#each action_block}}
                     <div class="mb-3">
                        <button type="button" class="btn {{#if
                              isSuccess}}
                              btn-success {{/if}} {{#if isDanger}}
                              btn-danger {{/if}} {{#if isInfo}}
                              btn-info {{/if}} ">{{text}}
                        </button>
                     </div>
                     {{/each}}
                  </div>
               </div>

               {{!-- Виведення даних з об'єкта 'action_block' --}}
               <div class="card">
                  <div class="card-body">
                     {{#with total}}
                     <h3>{{title}}</h3>
                     {{#each item_list}}
                     <p>{{name}}: {{price}}</p>
                     {{/each}}
                     <hr>
                     {{#each additional_info}}
                     <p>{{text}}: {{value}}</p>
                     {{/each}}
                     <hr>
                     {{#with total_price}}
                     <span>{{text}}: {{value}}</span>
                     {{/with}}
                     <hr>
                     {{#each button}}
                     <div>
                        <button type="button" class="btn {{#if
                              isPrimary}} btn-primary {{/if}} {{#if
                              isOutline}} btn-outline-primary {{/if}}
                              mb-3">{{text}}</button>
                     </div>
                     {{/each}}
                     {{/with}}
                  </div>
               </div>
            </section>
         </div>
         <hr>
      </div>
   </main>

   {{!-- Виведення даних з об'єкта 'footer' --}}
   {{> footer-order}}
</div>